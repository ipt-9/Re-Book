RewriteEngine On

# LOGIN
RewriteRule ^api/login$ ../backend/login.php [QSA,L]

# LOGOUT
RewriteRule ^api/logout$ ../backend/logout.php [QSA,L]

# REGISTER
RewriteRule ^api/register$ ../backend/register.php [QSA,L]

# GET BOOKS
RewriteCond %{REQUEST_METHOD} =GET
RewriteRule ^api/books$ ../backend/get_books.php [QSA,L]

# GET USER
RewriteCond %{REQUEST_METHOD} =GET
RewriteRule ^api/user$ ../backend/get_user.php [QSA,L]

# UPLOAD BOOK LISTING
RewriteCond %{REQUEST_METHOD} =POST
RewriteRule ^api/upload-listing$ ../backend/upload-listing.php [QSA,L]

# USER ENDPOINT (if needed separately)
RewriteRule ^api/user/update$ ../backend/user.php [QSA,L]

# AUTH
RewriteRule ^api/auth$ ../backend/auth.php [QSA,L]

# TEST
RewriteRule ^api/test$ ../backend/test.php [QSA,L]
